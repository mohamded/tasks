{{>header}}

<section class="container my-5">
    <h3 class="text-primary">Add New User</h3>

<form method="POST">
    <div class="mb-3 ">
        <input name="name" placeholder="name" class="form-control" value="{{x.name}}">
    </div>
    <div class="mb-3">
        <input name="balance" placeholder="balance" class="form-control" value={{x.balance}}>
    </div>
    <div class="mb-3">
        <input name="age" placeholder="age" class="form-control" value="{{x.age}}">
    </div>

    <div class="mb-3">
        <input type="submit" value="update User" class="btn btn-primary">
    </div>
</form>

</section>
{{>footer}}